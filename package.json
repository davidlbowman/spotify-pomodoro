{
	"name": "spotify-pomodoro",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"typescript": "~5.7.3"
	},
	"private": true,
	"scripts": {
		"dev:server": "bun run --cwd packages/server dev",
		"test:server": "bun test --cwd packages/server",
		"dev:client": "bun run --cwd packages/client dev",
		"build:client": "bun run --cwd packages/client build",
		"start:client": "bun run --cwd packages/client preview",
		"format": "bunx biome format --write .",
		"lint": "bunx biome check --fix ."
	},
	"workspaces": ["packages/*"]
}
